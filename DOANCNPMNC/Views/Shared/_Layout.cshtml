<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        .row{
            margin-left:4px;
        }
        .table-menu {
            border: 1px solid black;
            border-radius:4px;
            width: 100%;
            text-align: center;
            font-size: 20px;
            margin-top: 20px;      
        }
        .td-menu{
            padding:16px;
        }
        .td-menu:hover {
            padding: 16px;
            background-color: cornflowerblue;
        }      
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">WebSiteName</a>
            </div>
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("DonHang", "Index", "DONHANGs")</li>
                <li><a href="#">Page 1</a></li>
                <li><a href="#">Page 2</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-2 list-group">
                <table class="table-menu">
                    <tr>
                        <td class="td-menu">@Html.ActionLink("Đơn hàng", "Index", "DONHANGs")</td>
                    </tr>
                    <tr>
                        <td class="td-menu">@Html.ActionLink("Lịch sử giao hàng", "Index", "DONHANGs")</td>
                    </tr>
                    <tr>
                        <td class="td-menu">@Html.ActionLink("Theo Dõi Đơn hàng", "Index", "DONHANGs")</td>
                    </tr>
                    <tr>
                        <td class="td-menu">@Html.ActionLink("Shipper", "Index", "DONHANGs")</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-10" id="div-cont">
                @RenderBody()
            </div>  
        </div>
        
    </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Team TTB</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
